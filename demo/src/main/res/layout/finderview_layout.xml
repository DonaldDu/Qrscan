<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.dhy.qrcode.ScanLayout
        android:id="@+id/finderview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dhy.qrcode.FinderView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backgroundColor="#76cf4f62"
            app:contentConer="@drawable/demorect"
            app:contentConerMargin="-8px"
            app:contentLine="@drawable/demoline"
            app:contentPaddingTop="0dp"
            app:contentSize="200dp"
            app:contentWidth="220dp"
            app:lineAnimatorDuration="1800"
            app:strokeColor="#ffffff" />
    </com.dhy.qrcode.ScanLayout>
</FrameLayout>
